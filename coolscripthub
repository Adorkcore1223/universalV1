-- UI Setup
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "LaxUniversalGUI"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 500, 0, 300)
Frame.Position = UDim2.new(0.5, -250, 0.5, -150)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true

local UIStroke = Instance.new("UIStroke", Frame)
UIStroke.Thickness = 1.5
UIStroke.Color = Color3.fromRGB(70, 70, 70)

local TabButtons = Instance.new("Frame", Frame)
TabButtons.Size = UDim2.new(0, 100, 1, 0)
TabButtons.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

local MainTab = Instance.new("Frame", Frame)
MainTab.Size = UDim2.new(1, -100, 1, 0)
MainTab.Position = UDim2.new(0, 100, 0, 0)
MainTab.Visible = true
MainTab.BackgroundColor3 = Color3.fromRGB(35, 35, 35)

local InfoTab = MainTab:Clone()
InfoTab.Parent = Frame
InfoTab.Visible = false

-- Buttons
function createTabButton(name, parent, callback)
	local btn = Instance.new("TextButton", parent)
	btn.Size = UDim2.new(1, 0, 0, 40)
	btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.SourceSansBold
	btn.Text = name
	btn.TextSize = 18
	btn.MouseButton1Click:Connect(callback)
	return btn
end

local MainBtn = createTabButton("Main", TabButtons, function()
	MainTab.Visible = true
	InfoTab.Visible = false
end)

local InfoBtn = createTabButton("Info", TabButtons, function()
	MainTab.Visible = false
	InfoTab.Visible = true
end)

-- Main Tab Features
local function createButton(text, parent, callback)
	local btn = Instance.new("TextButton", parent)
	btn.Size = UDim2.new(0, 300, 0, 40)
	btn.Position = UDim2.new(0.5, -150, 0, #parent:GetChildren() * 45)
	btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.SourceSans
	btn.TextSize = 18
	btn.Text = text
	btn.MouseButton1Click:Connect(callback)
	return btn
end

createButton("Enable Fly (E to toggle)", MainTab, function()
	local flying = false
	local UIS = game:GetService("UserInputService")
	local player = game.Players.LocalPlayer
	local char = player.Character or player.CharacterAdded:Wait()
	local humanoidRootPart = char:WaitForChild("HumanoidRootPart")
	local bp = Instance.new("BodyPosition", humanoidRootPart)
	local bg = Instance.new("BodyGyro", humanoidRootPart)
	bp.MaxForce = Vector3.new(9e9, 9e9, 9e9)
	bg.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
	bp.Position = humanoidRootPart.Position

	local flying = false
	local speed = 50

	UIS.InputBegan:Connect(function(input, processed)
		if input.KeyCode == Enum.KeyCode.E then
			flying = not flying
		end
	end)

	game:GetService("RunService").RenderStepped:Connect(function()
		if flying then
			bp.Position = humanoidRootPart.Position + (workspace.CurrentCamera.CFrame.LookVector * speed)
			bg.CFrame = workspace.CurrentCamera.CFrame
		end
	end)
end)

createButton("ESP (Player boxes)", MainTab, function()
	for _, player in pairs(game.Players:GetPlayers()) do
		if player ~= game.Players.LocalPlayer and player.Character then
			local box = Instance.new("BoxHandleAdornment")
			box.Adornee = player.Character:FindFirstChild("HumanoidRootPart")
			box.AlwaysOnTop = true
			box.ZIndex = 5
			box.Size = Vector3.new(4, 6, 2)
			box.Transparency = 0.6
			box.Color3 = Color3.fromRGB(255, 0, 0)
			box.Parent = player.Character
		end
	end
end)

createButton("Teleport to Player", MainTab, function()
	local name = game:GetService("Players").LocalPlayer:PromptForUsername("Enter player name to teleport to:")
	local target = game.Players:FindFirstChild(name)
	if target and target.Character then
		game.Players.LocalPlayer.Character:MoveTo(target.Character:WaitForChild("HumanoidRootPart").Position)
	end
end)

